<DefineButtons>:

    humanA: humanA
    rl: rl
    treeA: treeA
    greedyA: greedyA
    humanG: humanG
    treeG: treeG
    greedyG: greedyG
    dfs: dfs

    GridLayout:
        cols:1
        size: root.width, root.height
        row_default_height: 50

        Label:
            text: "Please select algorithms to play the game:"
            pos_hint: {"x": 0.2, "top": 1}
            color: 217, 76, 59, 1

        GridLayout:
            cols:2
            row_force_default: True
            row_default_height: 100

            Label:
                text: "A*"

            GridLayout:
                cols:2
                CheckBox:
                    group: "alg"
                    id: humanA
                    active: True
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Human"

                CheckBox:
                    group: "alg"
                    id: rl
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Reinforcement learning"

                CheckBox:
                    group: "alg"
                    id: treeA
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Tree Agent"

                CheckBox:
                    group: "alg"
                    id: greedyA
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Greedy Agent"


        GridLayout:
            cols:2
            row_force_default: True
            row_default_height: 100

            Label:
                text: "Genetic Algorithm"

            GridLayout:
                cols:2
                CheckBox:
                    group: "alg"
                    id: humanG
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Human"

                CheckBox:
                    group: "alg"
                    id: treeG
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Tree Agent"

                CheckBox:
                    group: "alg"
                    id: greedyG
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Greedy Agent"


        GridLayout:
            cols: 2
            Label:
                text: "DFS"
            GridLayout:
                cols:2
                CheckBox:
                    group: "alg"
                    id: dfs
                    on_active: if self.active: root.color_sel = .7,.7,.9,1
                    size_hint_x: .20
                Label:
                    text: "Human"


        GridLayout:
            cols: 2
            row_force_default: True
            row_default_height: 50


            Button:
                text: "Play"
                on_press: root.getValues()
                size_hint: 0.3, 0.5
                pos_hint: {"x": 0.5, "top": 1}
            Button:
                text: "Help"
                on_press: root.helpBtnPressed()
                size_hint: 0.3, 0.5
                pos_hint: {"x": 1, "top": 1}


<Help>:
    Label:
        text: "Welcome to our Help center!"
        pos_hint: {"x":0, "y":0.4}
        color: 217, 76, 59, 1
    Label:
        text: "You can choose between A* algorithm and"
        pos_hint: {"x": -0.105, "y": 0.2}
    Label:
        text: "Genetic algorithm to be played by you or by"
        pos_hint: {"x": -0.1, "y": 0.1}
    Label:
        text: "some agents by clicking on radio button."
        pos_hint: {"x": -0.12, "y": 0}